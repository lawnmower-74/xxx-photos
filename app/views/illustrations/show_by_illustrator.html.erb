        const errorData = await response.json().catch(() => ({}));
        alert("å‰Šé™¤ã«å¤±æ•—ã—ã¾ã—ãŸ: " + (errorData.error || "ã‚µãƒ¼ãƒãƒ¼ã‚¨ãƒ©ãƒ¼"));
        // ã€Œä¸€æ‹¬å‰Šé™¤ãƒœã‚¿ãƒ³ã€ã‚’é€šå¸¸çŠ¶æ…‹ã«æˆ»ã™
        setBulkDeleteBtnState("idle");
